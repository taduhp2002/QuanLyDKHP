@model QuanLyDKHP.Models.SinhVien
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
    var ds = ViewBag.LopDangMo as List<QuanLyDKHP.Models.LopHP>;
}

<!-- Student Info Card -->
<div class="card mb-4 border-0 shadow-sm bg-light">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <i class="bi bi-person-circle fs-1 text-primary"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h4 class="mb-1">Xin chào, <span class="fw-bold">@Model.HoTen</span></h4>
                <div class="text-muted">
                    <span class="me-3"><i class="bi bi-calendar3 me-1"></i> Niên khóa: @Model.NienKhoa</span>
                    <span><i class="bi bi-envelope me-1"></i> Email: @Model.Email</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Course Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">
            <i class="bi bi-book me-2 text-primary"></i>
            Các học phần đang mở
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="row g-0">
            @foreach (var lhp in ds)
            {
                <div class="col-12 col-md-6">
                    <div class="p-3 h-100 border-bottom border-end">
                        <h5 class="fw-bold">@lhp.HocPhan.TenHP</h5>
                        <span class="badge bg-primary mb-2">@lhp.HocPhan.MaHP</span>

                        <ul class="list-unstyled mb-3">
                            <li class="mb-1"><i class="bi bi-mortarboard me-2 text-secondary"></i> Số tín chỉ: <span class="fw-medium">@lhp.HocPhan.SoTC</span></li>
                            <li class="mb-1"><i class="bi bi-person me-2 text-secondary"></i> Giảng viên: <span class="fw-medium">@lhp.GiangVien.HoTen</span></li>
                            <li class="mb-1"><i class="bi bi-calendar3 me-2 text-secondary"></i> Học kỳ: <span class="fw-medium">@lhp.HocKy.TenHK - @lhp.NamHoc.TenNH</span></li>
                            <li><i class="bi bi-people me-2 text-secondary"></i> Sĩ số tối đa: <span class="fw-medium">@lhp.SiSo</span></li>
                        </ul>

                        <a href="@Url.Action("DangKy", "DKHP", new { id = lhp.ID_LHP })" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i> Đăng ký
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add this section to the <head> of your layout or inline if needed -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">