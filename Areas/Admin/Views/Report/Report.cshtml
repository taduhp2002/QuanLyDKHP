@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Báo cáo thống kê học phần</title>
    <style>
        body {
            font-family: 'DejaVu Sans', sans-serif;
            font-size: 12pt;
            margin: 20mm 10mm;
        }

        h1 {
            text-align: center;
            font-size: 18pt;
            margin-bottom: 10px;
        }

        .subtitle {
            text-align: center;
            font-size: 11pt;
            color: #555;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .footer {
            position: fixed;
            bottom: 10mm;
            width: 100%;
            text-align: center;
            font-size: 10pt;
            color: #777;
        }
    </style>
</head>
<body>
    <h1>BÁO CÁO THỐNG KÊ HỌC PHẦN</h1>
    <p class="subtitle">Ngày tạo: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>

    <table>
        <thead>
            <tr>
                <th>Mã HP</th>
                <th>Tên HP</th>
                <th>Số TC</th>
                <th>Loại HP</th>
                <th>Số lớp</th>
                <th>Số SV đăng ký</th>
                <th>Sĩ số</th>
                <th>Tỷ lệ lấp đầy (%)</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GetType().GetProperty("MaHP").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("TenHP").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("SoTC").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("LoaiHP").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("SoLop").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("SoSVDangKy").GetValue(item)</td>
                    <td>@item.GetType().GetProperty("SiSo").GetValue(item)</td>
                    <td>@String.Format("{0:F2}", item.GetType().GetProperty("TyLeLapDay").GetValue(item))</td>
                    <td>@item.GetType().GetProperty("TrangThai").GetValue(item)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer">
        Báo cáo được tạo bởi Hệ thống Quản lý Đăng ký Học phần - Khoa CNTT
    </div>
</body>
</html>