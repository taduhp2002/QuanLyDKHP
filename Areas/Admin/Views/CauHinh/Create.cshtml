@model QuanLyDKHP.Models.CauHinhDKHP

@{
    ViewBag.Title = "Thêm cấu hình";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-3">Thêm cấu hình đăng ký học phần</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ID_NH)
                @Html.DropDownList("ID_NH", null, "-- Chọn năm học --", new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ID_HK)
                @Html.DropDownList("ID_HK", null, "-- Chọn học kỳ --", new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NgayBatDau)
                @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NgayKetThuc)
                @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.SoTC_ToiDa)
                @Html.EditorFor(m => m.SoTC_ToiDa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <button type="submit" class="btn btn-success">Lưu</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
}
