@model QuanLyDKHP.Models.CauHinhDKHP
@{
    ViewBag.Title = "Chi tiết cấu hình đăng ký học phần";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Cấu hình ĐKHP</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800">
            <i class="fas fa-cog me-2"></i>Chi tiết cấu hình đăng ký học phần
        </h2>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.ID })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="card shadow border-0 mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">
                Thông tin cấu hình #@Model.ID - @Model.NamHoc.TenNH, @Model.HocKy.TenHK
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <!-- Thông tin chung -->
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">Thông tin chung</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">ID:</span>
                                    <span class="badge bg-secondary rounded-pill">@Html.DisplayFor(model => model.ID)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Năm học:</span>
                                    <span>@Html.DisplayFor(model => model.NamHoc.TenNH)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Học kỳ:</span>
                                    <span>@Html.DisplayFor(model => model.HocKy.TenHK)</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Thông tin cấu hình -->
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">Cấu hình đăng ký</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Số tín chỉ tối đa:</span>
                                    <span class="badge bg-info rounded-pill">@Html.DisplayFor(model => model.SoTC_ToiDa)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Ngày bắt đầu:</span>
                                    <span class="text-success">@Model.NgayBatDau.ToString("dd/MM/yyyy")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Ngày kết thúc:</span>
                                    <span class="text-danger">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="mt-4">
                <h5 class="mb-3">Thời gian đăng ký</h5>
                <div class="progress position-relative" style="height: 30px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                    <div class="position-absolute d-flex justify-content-between w-100 px-3" style="top: 5px;">
                        <small class="text-white">@Model.NgayBatDau.ToString("dd/MM/yyyy")</small>
                        <small class="text-white">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Cập nhật gần nhất: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                <div>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Quản lý học phần
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Danh sách học phần</div>
                        </div>
                        <div class="col-auto">
                            <a href="#" class="btn btn-sm btn-primary">
                                <i class="fas fa-book"></i> Xem
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Thống kê đăng ký
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Báo cáo tổng hợp</div>
                        </div>
                        <div class="col-auto">
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fas fa-chart-pie"></i> Xem
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Trạng thái hiện tại
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var now = DateTime.Now;
                                    if (now < Model.NgayBatDau)
                                    {
                                        <span class="text-warning">Chưa bắt đầu</span>
                                    }
                                    else if (now > Model.NgayKetThuc)
                                    {
                                        <span class="text-danger">Đã kết thúc</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Đang diễn ra</span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa cấu hình đăng ký học phần này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <a href="@Url.Action("Delete", new { id = Model.ID })" class="btn btn-danger">Xóa</a>
            </div>
        </div>
    </div>
</div>