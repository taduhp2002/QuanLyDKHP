
@model List<QuanLyDKHP.Models.HocPhan>
@{
    ViewBag.Title = "Quản Lý Đề Cương";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<!-- Toastr -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Inter', sans-serif;
    }

    h2 {
        font-weight: 700;
        color: #1f2a44;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert {
        border-radius: 10px;
        padding: 15px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .alert-primary {
        background-color: #e7f1ff;
        color: #1d4ed8;
        border: 1px solid #dbeafe;
    }

    .alert-warning {
        background-color: #fef3c7;
        color: #d97706;
        border: 1px solid #fde68a;
    }

    .table-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 25px;
        margin-bottom: 30px;
    }

    .table th {
        background-color: #1f2a44;
        color: white;
        font-weight: 600;
        padding: 12px;
        text-align: center;
    }

    .table td {
        padding: 12px;
        text-align: center;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
        transition: background-color 0.2s ease;
    }

    .btn-sm {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn-sm i {
            margin-right: 6px;
        }

    .btn-info {
        background-color: #3b82f6;
        border: none;
    }

        .btn-info:hover {
            background-color: #2563eb;
        }

    .btn-primary {
        background-color: #10b981;
        border: none;
    }

        .btn-primary:hover {
            background-color: #059669;
        }

    .btn-danger {
        background-color: #ef4444;
        border: none;
    }

        .btn-danger:hover {
            background-color: #dc2626;
        }

    .modal-content {
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
    }

    .modal-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e5e7eb;
    }

    .modal-title {
        font-weight: 600;
        color: #1f2a44;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #d1d5db;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 8px;
        margin: 2px;
        padding: 8px 14px;
        font-size: 0.9rem;
        border: 1px solid #d1d5db;
        background-color: #fff;
        color: #374151;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background-color: #e5e7eb;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #3b82f6;
            color: white !important;
            border: none;
        }

    .dataTables_wrapper .dataTables_filter input {
        border-radius: 8px;
        border: 1px solid #d1d5db;
        padding: 6px 12px;
        margin-left: 10px;
    }

    .dataTables_wrapper .dataTables_length select {
        border-radius: 8px;
        border: 1px solid #d1d5db;
        padding: 4px 8px;
    }

    .text-danger {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    @@media (max-width: 768px) {
        .alert {
            font-size: 0.9rem;
            padding: 10px;
        }

        .table-container {
            padding: 15px;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 0.85rem;
        }

        .table th, .table td {
            font-size: 0.9rem;
        }
    }
</style>

<h2 class="mb-4">Danh sách học phần và đề cương</h2>

<div class="mb-3">
    <strong>@ViewBag.CoDeCuong</strong> học phần đã có đề cương |
    <strong>@ViewBag.KhongCoDeCuong</strong> học phần chưa có đề cương
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã HP</th>
            <th>Tên học phần</th>
            <th>Loại</th>
            <th>Đề cương</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var hp = Model[i];
            <tr>
                <td>@hp.MaHP</td>
                <td>@hp.TenHP</td>
                <td>
                    @(hp.LoaiHP == 1 ? "Bắt buộc" : "Tự chọn")
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(hp.DeCuong))
                    {
                        <a href="@Url.Content(hp.DeCuong)" target="_blank">Xem đề cương</a>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có</span>
                    }
                </td>
                <td>
                    <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#uploadModal-@hp.ID_HP">
                        Upload
                    </button>
                </td>
            </tr>

            <!-- MODAL -->
            <div class="modal fade" id="uploadModal-@hp.ID_HP" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@hp.ID_HP" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @using (Html.BeginForm("UploadDeCuong", "QLHocPhan", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel-@hp.ID_HP">Upload đề cương: @hp.TenHP</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @Html.Hidden("id", hp.ID_HP)
                                <div class="form-group">
                                    <label>Chọn file đề cương (.pdf, .doc, .docx):</label>
                                    <input type="file" name="file" class="form-control" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Upload</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#deCuongTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
            },
            pageLength: 10,
            lengthMenu: [10, 25, 50, 100],
            ordering: true,
            searching: true,
            paging: true
        });

        toastr.options = {
            "positionClass": "toast-top-right",
            "progressBar": true,
            "timeOut": "3000"
        };
    });
</script>

@if (TempData["Success"] != null)
{
    <script>toastr.success("@TempData["Success"]");</script>
}
@if (TempData["Error"] != null)
{
    <script>toastr.error("@TempData["Error"]");</script>
}