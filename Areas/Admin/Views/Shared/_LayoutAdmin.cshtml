        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            min-height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        /* Header styles */
        .main-header {
            position: fixed;
            top: 0;
            right: 0;
            left: 280px;
            height: 70px;
            background-color: #fff;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
            padding: 0 1.5rem;
            z-index: 999;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: all 0.3s ease;
        }

            .main-header.collapsed {
                left: 70px;
            }

        .header-title {
            font-weight: 600;
            color: #495057;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .user-profile .avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #e6f2ff;
                color: #3a7bd5;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 600;
            }

        .header-text {
            color: #495057;
            font-weight: 600;
        }

        .logout-btn {
            color: #dc3545;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 0.5rem;
            border-radius: 4px;
            transition: all 0.2s;
        }

            .logout-btn:hover {
                background-color: #fff5f5;
            }

            .logout-btn i {
                margin-right: 5px;
            }

        /* Sidebar styles */
        .sidebar {
            width: 290px;
            background-color: #fff;
            color: #495057;
            transition: all 0.3s ease;
            position: fixed;
            height: 100%;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            padding-top: 1rem;
        }

      .sidebar-footer {
            margin-top: auto;
            padding: 1rem;
            border-top: 1px solid #f1f1f1;
            text-align: center;
            color: #6c757d;
            font-size: 0.8rem;
        }

        .sidebar.collapsed .sidebar-footer {
            display: none;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar-header {
            padding: 0.5rem 1rem 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #f1f1f1;
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .sidebar-logo {
            font-weight: 700;
            font-size: 1.2rem;
            color: #3a7bd5;
            display: flex;
            align-items: center;
        }

            .sidebar-logo i {
                font-size: 1.5rem;
                margin-right: 1px;
                color: #3a7bd5;
            }

        .sidebar .nav-link {
            color: #6c757d;
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            transition: all 0.2s ease;
            border-radius: 5px;
            margin: 0.2rem 0.8rem;
            position: relative;
        }

            .sidebar .nav-link:hover {
                background-color: #f0f4f9;
                color: #3a7bd5;
            }

            .sidebar .nav-link.active {
                background-color: #e6f2ff;
                color: #3a7bd5;
                font-weight: 600;
            }

            .sidebar .nav-link i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
                font-size: 1.1rem;
                transition: all 0.3s;
            }

            .sidebar .nav-link .link-text {
                transition: opacity 0.3s ease, transform 0.3s ease;
                white-space: nowrap;
                opacity: 1;
            }

        .sidebar.collapsed .nav-link .link-text {
            opacity: 0;
            transform: translateX(10px);
            position: absolute;
        }

        .sidebar.collapsed .sidebar-logo-text {
            display: none;
        }

        .sidebar.collapsed .sidebar-logo i {
            justify-content: center;
            margin: 0 auto;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
            font-size: 1.3rem;
        }

        .sidebar.collapsed .sidebar-header {
            justify-content: center;
            padding: 1rem 0;
        }

        /* Submenu styles */
        .sidebar .collapse {
            background-color: #f8f9fa;
            border-radius: 5px;
            margin: 0 0.8rem;
        }

            .sidebar .collapse .nav-link {
                padding-left: 3.2rem;
                font-size: 0.9rem;
            }

        /* Toggle button */
        .toggle-btn {
            background-color: transparent;
            color: #3a7bd5;
            border: none;
            border-radius: 5px;
            padding: 0.5rem;
            cursor: pointer;
            height: 38px;
            width: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
            margin-right: 15px;
        }

            .toggle-btn:hover {
                background-color: #e6f2ff;
            }

            .toggle-btn i {
                transition: transform 0.3s;
            }

        .sidebar.collapsed + .main-wrapper .toggle-btn i {
            transform: rotate(180deg);
        }

        /* Main content wrapper */
        .main-wrapper {
            margin-left: 280px;
            padding: 85px 10px 10px;
            width: calc(100% - 280px);
            transition: all 0.3s ease;
        }

            .main-wrapper.collapsed {
                margin-left: 70px;
                width: calc(100% - 70px);
            }

        /* Tooltip for collapsed sidebar */
        .sidebar.collapsed .nav-link {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-left: 0;
            padding-right: 0;
            height: 48px;
        }

        .tooltip-sidebar {
            position: absolute;
            left: 70px;
            background-color: #343a40;
            color: #fff;
            padding: 0.5rem 0.8rem;
            border-radius: 4px;
            font-size: 0.8rem;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
            white-space: nowrap;
            z-index: 1002;
        }

        .sidebar.collapsed .nav-link:hover .tooltip-sidebar {
            opacity: 1;
            visibility: visible;
        }

        /* Content cards */
        .content-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            padding: 1rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .card-title {
            font-weight: 600;
            color: #495057;
            margin-bottom: 1.2rem;
            padding-bottom: 0.8rem;
            border-bottom: 1px solid #f1f1f1;
        }

        /* Header flex container */
        .header-container {
            display: flex;
            align-items: center;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .sidebar {
                width: 70px;
            }

            .main-wrapper {
                margin-left: 70px;
                width: calc(100% - 70px);
            }

            .main-header {
                left: 70px;
            }

            .sidebar .nav-link .link-text {
                opacity: 0;
                transform: translateX(10px);
                position: absolute;
            }

            .sidebar-logo-text {
                display: none;
            }

            .sidebar .nav-link i {
                margin-right: 0;
                font-size: 1.3rem;
            }

            .sidebar .sidebar-header {
                justify-content: center;
                padding: 1rem 0;
            }
        }
        /* Loading overlay container */
#loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(248, 249, 250, 0.9); /* Matches body background with opacity */
    z-index: 10000; /* Above sidebar and header */
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease; /* Faster fade for responsiveness */
}

/* Loader animation */
.loader {
    width: 60px;
    height: 60px;
    border: 5px solid #e6f2ff; /* Light blue from your palette */
    border-top: 5px solid #3a7bd5; /* Primary color */
    border-radius: 50%;
    animation: spin 1.2s linear infinite; /* Smooth, continuous spin */
}

/* Spin animation */
@@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
    </style>
