            <button class="navbar-toggler shadow-none border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Nav links -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "TrangChu")">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DangKyHocPhan", "DKHP")">Đăng ký học phần</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "TraCuu")">Tra cứu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("XemDangKy", "DKHP")">Lịch sử đăng ký</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "ThoiKhoaBieu")">Lịch học</a>
                    </li>
                </ul>

                <!-- Right side -->
                <div class="d-flex align-items-center">
                    <!-- Notification dropdown -->
                    <div class="dropdown me-3">
                        <button class="btn btn-light btn-icon position-relative" type="button" id="notificationDropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bx bx-bell fs-5"></i>
                            <span class="notification-badge badge rounded-pill bg-danger">2</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="notificationDropdown" style="min-width: 280px;">
                            <li>
                                <h6 class="dropdown-header border-bottom pb-2">Thông báo</h6>
                            </li>
                            <li>
                                <a class="dropdown-item p-2 rounded-3" href="#">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary bg-opacity-10 p-2 rounded-circle text-primary">
                                                <i class="bx bx-calendar"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0 fs-6">Mở đăng ký học phần HK2</h6>
                                            <p class="mb-0 text-muted small">Hạn đăng ký 20/04/2025</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item p-2 rounded-3" href="#">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 p-2 rounded-circle text-success">
                                                <i class="bx bx-book-open"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0 fs-6">Lịch thi cập nhật</h6>
                                            <p class="mb-0 text-muted small">Xem lịch thi mới nhất</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-center text-primary" href="#">Xem tất cả</a>
                            </li>
                        </ul>
                    </div>

                    <!-- User dropdown -->
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                           id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar me-2">
                                <i class="bx bx-user"></i>
                            </div>
                            <span class="d-none d-md-block">@Session["UserName"]</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("ThongTinTaiKhoan", "SinhVien")">
                                    <i class="bx bx-user me-2"></i>Thông tin cá nhân
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bx bx-cog me-2"></i>Cài đặt
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Home")">
                                    <i class="bx bx-log-out me-2"></i>Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Optional Page Header - Dynamic per page -->
    @if (IsSectionDefined("PageHeader"))
    {
        <div class="page-header">
            <div class="container">
                @RenderSection("PageHeader", required: false)
            </div>
        </div>
    }

    <!-- Main content -->
    <main class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <div>
                        © 2025 - Hệ thống đăng ký học phần | Khoa Công nghệ Thông tin
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center text-md-end">
                        <a href="#" class="me-3">Chính sách</a>
                        <a href="#" class="me-3">Điều khoản</a>
                        <a href="#" class="me-3">Hỗ trợ</a>
                        <a href="#"><i class="bx bx-up-arrow-circle fs-5 ms-2" title="Lên đầu trang"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Script xử lý active menu
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy URL hiện tại
            const currentUrl = window.location.href;

            // Lấy tất cả các liên kết trong navbar
            const navLinks = document.querySelectorAll('.navbar-nav .nav-item .nav-link');

            // Xóa active class từ tất cả các liên kết
            document.querySelectorAll('.navbar-nav .nav-item').forEach(item => {
                item.classList.remove('active');
            });

            // Thêm active class cho liên kết phù hợp
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentUrl.includes(href)) {
                    link.parentElement.classList.add('active');
                }
            });

            // Back to top button functionality
            const scrollToTop = document.querySelector('.bx-up-arrow-circle');
            if (scrollToTop) {
                scrollToTop.addEventListener('click', function (e) {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>