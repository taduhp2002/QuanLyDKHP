@model IEnumerable<QuanLyDKHP.Models.CauHinhDKHP>

@{
    ViewBag.Title = "Cấu hình đăng ký học phần";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-3">Cấu hình đăng ký học phần</h2>

<p>
    <a class="btn btn-success mb-3" href="@Url.Action("Create")">Thêm cấu hình mới</a>
</p>

<table id="cauhinhTable" class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Năm học</th>
            <th>Học kỳ</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số tín chỉ tối đa</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NamHoc.TenNH</td>
                <td>@item.HocKy.TenHK</td>
                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                <td>@item.SoTC_ToiDa</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = item.ID })">Sửa</a>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.ID })">Chi tiết</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.ID })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#cauhinhTable').DataTable();
        });
    </script>
}
